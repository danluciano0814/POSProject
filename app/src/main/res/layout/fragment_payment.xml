<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/round_button_bg"
                android:drawableTop="@drawable/ic_hide"
                android:textColor="@color/colorPrimary"
                android:text="HIDE"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">

                        <TextView
                            android:text="Balance"
                            style="@style/blue_normal_txt"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_layout_btn_h"
                            android:inputType="textPassword"
                            android:maxLength="16"
                            android:background="@drawable/txt_transparentblue_bg"
                            android:textSize="18dp"
                            android:id="@+id/txtBalance"
                            android:textColor="@color/btnLetter"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:text="Tender"
                            style="@style/blue_normal_txt"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_layout_btn_h"
                            android:maxLength="16"
                            android:background="@drawable/txt_transparentblue_bg"
                            android:textSize="18dp"
                            android:id="@+id/txtTender"
                            android:textColor="@color/btnLetter"
                            android:gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:text="Change"
                            style="@style/blue_normal_txt"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_layout_btn_h"
                            android:maxLength="16"
                            android:background="@drawable/txt_transparentblue_bg"
                            android:textSize="18dp"
                            android:id="@+id/txtChange"
                            android:textColor="@color/btnLetter"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:text="7"
                    android:id="@+id/btn7"
                    style="@style/login_button" />

                <Button
                    android:text="8"
                    android:id="@+id/btn8"
                    style="@style/login_button" />

                <Button
                    android:text="9"
                    android:id="@+id/btn9"
                    style="@style/login_button"/>

                <Button
                    android:text="0"
                    android:id="@+id/btnEditable1"
                    style="@style/login_button"
                    android:maxLength="9"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:text="4"
                    android:id="@+id/btn4"
                    style="@style/login_button" />

                <Button
                    android:text="5"
                    android:id="@+id/btn5"
                    style="@style/login_button" />

                <Button
                    android:text="6"
                    android:id="@+id/btn6"
                    style="@style/login_button"/>

                <Button
                    android:text="0"
                    android:id="@+id/btnEditable2"
                    style="@style/login_button"
                    android:maxLength="9"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:text="1"
                    android:id="@+id/btn1"
                    style="@style/login_button"/>

                <Button
                    android:text="2"
                    android:id="@+id/btn2"
                    style="@style/login_button" />

                <Button
                    android:text="3"
                    android:id="@+id/btn3"
                    style="@style/login_button"/>

                <Button
                    android:text="0"
                    android:id="@+id/btnEditable3"
                    style="@style/login_button"
                    android:maxLength="9"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:text="Clear"
                    android:textAllCaps="false"
                    android:id="@+id/btnClear"
                    style="@style/login_button"/>

                <Button
                    android:text="0"
                    android:id="@+id/btn0"
                    style="@style/login_button" />

                <Button
                    android:text="."
                    android:textAllCaps="false"
                    android:id="@+id/btnLogin"
                    style="@style/login_button"/>

                <Button
                    android:text="Back"
                    android:id="@+id/btnEditable4"
                    style="@style/login_button"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Payment Type : "
                            style="@style/blue_normal_txt"/>

                        <TextView
                            android:text="Cash"
                            style="@style/blue_normal_txt"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_button_bg"
                            android:drawableTop="@drawable/ic_cash"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="CASH"
                            android:textSize="12dp"
                            android:padding="10dp"
                            android:layout_marginTop="10dp" />

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_button_bg"
                            android:drawableTop="@drawable/ic_credit"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="CREDIT"
                            android:textSize="12dp"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"/>

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_button_bg"
                            android:drawableTop="@drawable/ic_reward"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="POINTS"
                            android:textSize="12dp"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:gravity="center_horizontal|center_vertical"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/payment_layout_btn_h"
                    android:drawableTop="@drawable/ic_done"
                    android:background="@drawable/sales_round_button"
                    android:padding="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:id="@+id/btnPayment" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>