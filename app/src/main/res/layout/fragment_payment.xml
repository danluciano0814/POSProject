<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_button_bg"
                android:drawableTop="@drawable/ic_hide"
                android:padding="10dp"
                android:text="HIDE"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btnHide"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight=".75"
                        android:orientation="vertical">

                        <TextView
                            style="@style/blue_normal_txt"
                            android:text="S.C." />

                        <TextView
                            android:id="@+id/txtServiceCharge"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_layout_btn_h"
                            android:background="@drawable/txt_transparentblue_bg"
                            android:gravity="center"
                            android:maxLength="16"
                            android:text="200.00"
                            android:textColor="@color/btnLetter"
                            android:textSize="@dimen/payment_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.25"
                        android:orientation="vertical">

                        <TextView
                            style="@style/blue_normal_txt"
                            android:text="Total Pay" />

                        <TextView
                            android:id="@+id/txtTotalBalance"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_layout_btn_h"
                            android:background="@drawable/txt_transparentblue_bg"
                            android:gravity="center"
                            android:maxLength="16"
                            android:text="1100.00"
                            android:textColor="@color/btnLetter"
                            android:textSize="@dimen/payment_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.25"
                        android:orientation="vertical">

                        <TextView
                            style="@style/blue_normal_txt"
                            android:text="Tender" />

                        <TextView
                            android:id="@+id/txtTender"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_layout_btn_h"
                            android:background="@drawable/txt_transparentblue_bg"
                            android:gravity="center"
                            android:maxLength="16"
                            android:textColor="@color/btnLetter"
                            android:textSize="@dimen/payment_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".75"
                        android:orientation="vertical">

                        <TextView
                            style="@style/blue_normal_txt"
                            android:text="Change" />

                        <TextView
                            android:id="@+id/txtChange"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_layout_btn_h"
                            android:background="@drawable/txt_transparentblue_bg"
                            android:gravity="center"
                            android:maxLength="16"
                            android:textColor="@color/btnLetter"
                            android:textSize="@dimen/payment_text_size" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn7"
                    style="@style/login_button"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/login_button"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/login_button"
                    android:text="9" />

                <Button
                    android:id="@+id/btnEditable1"
                    style="@style/login_button"
                    android:maxLength="9"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn4"
                    style="@style/login_button"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/login_button"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/login_button"
                    android:text="6" />

                <Button
                    android:id="@+id/btnEditable2"
                    style="@style/login_button"
                    android:maxLength="9"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    style="@style/login_button"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/login_button"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/login_button"
                    android:text="3" />

                <Button
                    android:id="@+id/btnEditable3"
                    style="@style/login_button"
                    android:maxLength="9"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnClear"
                    style="@style/login_button"
                    android:text="Clear"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btn0"
                    style="@style/login_button"
                    android:text="0" />

                <Button
                    android:id="@+id/btnDecimal"
                    style="@style/login_button"
                    android:textStyle="bold"
                    android:text="."
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnBack"
                    style="@style/login_button"
                    android:text="Back"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/blue_normal_txt"
                            android:text="Payment Type : " />

                        <TextView
                            style="@style/blue_normal_txt"
                            android:text="CASH"
                            android:id="@+id/txtPaymentType"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_button_bg"
                            android:drawableTop="@drawable/ic_cash"
                            android:padding="10dp"
                            android:text="CASH"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12dp"
                            android:id="@+id/btnCash"/>

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_button_bg"
                            android:drawableTop="@drawable/ic_credit"
                            android:padding="10dp"
                            android:text="CREDIT"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12dp"
                            android:id="@+id/btnCredit"/>

                        <Button
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_button_bg"
                            android:drawableTop="@drawable/ic_reward"
                            android:padding="10dp"
                            android:text="POINTS"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="12dp"
                            android:id="@+id/btnPoints"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/payment_layout_btn_h"
                    android:background="@drawable/sales_round_button"
                    android:drawableTop="@drawable/ic_done"
                    android:padding="20dp"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>