<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:focusableInTouchMode="true">

    <TextView
        android:text="Register Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="NOTE: You can use the same code as login pin after you register the 4 digit code."/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_gray_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:maxLines="1"
                android:maxLength="4"
                android:gravity="center"
                android:inputType="numberPassword"
                android:imeOptions="flagNoFullscreen"
                android:background="@drawable/edittxt_bg"
                android:id="@+id/etCode"
                />

            <Button
                android:text="ENTER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/btnEnter"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>