<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:focusableInTouchMode="true">

    <TextView
        android:text="Register Code"
        style="@style/blue_title_txt"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_normal"
        android:text="NOTE: You can use the same code as login pin after you register the 4 digit code."/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_gray_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                style="@style/blue_normal_txt"
                android:text="Code"
                />

            <EditText
                style="@style/edittext_form"
                android:maxLength="4"
                android:gravity="center"
                android:inputType="numberPassword"
                android:id="@+id/etCode"
                />

            <Button
                android:text="ENTER"
                android:id="@+id/btnEnter"
                style="@style/blue_form_btn"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>