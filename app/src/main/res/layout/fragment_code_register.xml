<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:focusableInTouchMode="true">

    <TextView
        android:text="Register Code"
        style="@style/blue_title_txt"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:text="Thank you for signing to Cheappos. A message with 4 digit code to unlock the app has been sent to your email, Use the same code for your Login"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_gray_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                style="@style/blue_normal_txt"
                android:text="Code"
                />

            <EditText
                style="@style/edittext_form"
                android:maxLength="4"
                android:gravity="center"
                android:inputType="numberPassword"
                android:id="@+id/etCode"
                android:hint="Enter the 4 digit code here"
                />

            <Button
                android:text="ENTER"
                android:id="@+id/btnEnter"
                style="@style/blue_form_btn"/>


        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:id="@+id/txtCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:visibility="invisible"/>

</LinearLayout>