<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:focusableInTouchMode="true">

    <TextView
        android:text="Initial Registration"
        android:id="@+id/textView2"
        style="@style/blue_title_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="NOTE: This app is free, registration is for password recovering purpose only, requires internet and a valid email. Check your email after registration. "/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/transparent_gray_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:text="EMAIL"
                style="@style/blue_normal_txt" />

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/etEmail"
                style="@style/edittext_form"
                />

            <TextView
                android:text="FIRST NAME"
                style="@style/blue_normal_txt" />

            <EditText
                android:inputType="text"
                android:id="@+id/etFname"
                style="@style/edittext_form"
                />

            <TextView
                android:text="LAST NAME"
                style="@style/blue_normal_txt" />

            <EditText
                android:inputType="text"
                android:id="@+id/etLname"
                style="@style/edittext_form"
                />

            <Button
                android:text="Send"
                android:background="@drawable/button_blue"
                android:padding="5dp"
                android:id="@+id/btnSend"
                style="@style/blue_form_btn" />

            <Button
                android:id="@+id/btnEnterCode"
                android:background="@drawable/button_blue"
                android:padding="5dp"
                style="@style/blue_form_btn"
                android:layout_marginBottom="10dp"
                android:text="Enter Code" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>